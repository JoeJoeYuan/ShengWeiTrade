@using Webdiyer.WebControls.Mvc;
@model PagedList<Models.Products>
<style type="text/css">
    .paginator
    {
        font: 11px Arial, Helvetica, sans-serif;
        margin: 0px;
    }
    .paginator a
    {
        padding: 1px 6px;
        border: solid 1px #ddd;
        background: #fff;
        text-decoration: none;
        margin-right: 2px;
    }
    .paginator a:visited
    {
        padding: 1px 6px;
        border: solid 1px #ddd;
        background: #fff;
        text-decoration: none;
    }
    .paginator .cpb
    {
        padding: 1px 6px;
        font-weight: bold;
        font-size: 13px;
        border: none;
    }
    .paginator a:hover
    {
        color: #fff;
        background: #ffa501;
        border-color: #ffa501;
        text-decoration: none;
    }
</style>
<div class="nright">
