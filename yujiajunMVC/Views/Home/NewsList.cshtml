@using Webdiyer.WebControls.Mvc;
@model PagedList<Models.News>
<style type="text/css">
    .newslist
    {
        width: 680px;
        overflow: hidden;
        padding: 0 0 0 20px;
        font-size: 14px;
    }
    .newslist table
    {
        width: 100%;
        height: auto;
    }
    .newslist table tr
    {
        width: 100%;
        height: 25px;
        overflow: hidden;
    }
</style>
<div class="nright">
    <div class="tool">
        <div class="rs_u">
            &nbsp;</div>
        <div class="container">
            <h2>
                <span class="border_line">Navigation</span></h2>
            <ul class="b1">
                @Html.Raw(ViewBag.navigation)
            </ul>
        </div>
        <div class="rs_d">
            &nbsp;</div>
    </div>
    <div class="line10">
    </div>
    <div class="tool">
        <div class="rs_u">
            &nbsp;</div>
        <div class="container">
            <h2>
                <span class="border_line">Hot News</span></h2>
            <ul class="ul_txt">
                @Html.Raw(ViewBag.hot)
            </ul>
        </div>
        <div class="rs_d">
            &nbsp;</div>
    </div>
</div>
<div class="nleft">
    <div class="mode">
        <div class="rm_u">
            &nbsp;</div>
        <div class="container" style="min-height: 500px; max-height: none;">
            <h2 class="title">@Html.Raw(ViewBag.name)</h2>
            <div class="newslist">
                <br />
                @if (Model != null)
                {
                    <table cellpadding="0" cellspacing="0">
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td width="80%">
                                    <a href="@Url.Action("NewsDetail", "Home", new { ID = item.ID, time = item.CreateTime.Value.ToString("yyyy-MM-dd") })" target="_blank" title="@item.Title">@item.Title</a>
                                </td>
                                <td>@item.CreateTime.Value.ToString("yyyy-MM-dd")
                                </td>
                            </tr>
                        }
                    </table>
                    <table style="width: 100%; height: 30px; text-align: left;" cellpadding="0" cellspacing="0">
                        <tr>
                            <td style="width: 35%;">
                                共@(Model.TotalItemCount)条,每页@(Model.PageSize)条,当前@(Model.TotalPageCount)/@(Model.CurrentPageIndex)页
                            </td>
                            <td style="width: auto;">
                                @Html.Pager(Model, new PagerOptions { PageIndexParameterName = "id", NumericPagerItemWrapperFormatString = "<span class=\"cpb\">{0}</span>" }, null, null, null)
                            </td>
                        </tr>
                    </table>
                }
            </div>
        </div>
        <div class="rm_d">
            &nbsp;</div>
    </div>
</div>
