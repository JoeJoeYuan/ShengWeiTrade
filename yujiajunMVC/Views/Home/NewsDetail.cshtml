@model Models.News

<style type="text/css">
        .news-top{width:99.3%;min-height:600px;max-height:none;border:1px solid #c5dde9;text-align:center;margin-left:4px;}
        .news-back{width:100%;height:31px;background-image:url("@Url.Content("/images/3.png")");padding-top:5px;text-align:left;}
        .news-title{width:95%;height:25px;margin-top:10px;font-size:20px;color:#0170d9}
        .news-note{width:95%;height:20px;border-bottom:1px dashed #d8d8d8;text-align:right;font-size:13px; margin-left:auto; margin-right:auto;}
        .news-content{width:95%;height:auto;margin-top:10px;text-align:left;padding-bottom:20px; margin-left:auto; margin-right:auto;}
    </style>
<div class="nleft news-top">
        <div class="news-back"><div style="margin-left:10px;"><img src="@Url.Content("/images/ico_2.gif")" />&nbsp;&nbsp;<strong>新闻详情</strong></div></div>
        @if (Model != null)
        {
            string file = string.Empty;
         <div class="news-title"><strong>@Model.Title</strong></div>
            <div class="news-note">
                @if (Model.IsFile != null && Model.IsFile != 0)
                {
                    file = "<a href=\"/Home/DownLoad?ID=" + Model.ID + "&path=" + HttpUtility.UrlEncode(Model.FilePath) + "\" target=\"_blank\">附件下载</a>";
                }
                @(Html.Raw(file))  &nbsp;&nbsp;作者:@Model.Author&nbsp;&nbsp;文章来源:@Model.Source&nbsp;&nbsp;点击数:@Model.Click&nbsp;&nbsp;更新时间:@Model.CreateTime.Value.ToString("yyyy-MM-dd")
            </div>
            <div class="news-content">
                 @Html.Raw(Model.NewsContent)
         </div>
        }
    </div>

