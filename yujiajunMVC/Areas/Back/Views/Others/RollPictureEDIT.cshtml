@model yujiajunMVC.Areas.Back.Controllers.Picture
@{
    ViewBag.Title = "RollPictureEDIT";
    Layout = null;
}
        
   <!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">

<html xmlns="http://www.w3.org/1999/xhtml" >
<head runat="server">
    <title>Untitled Page</title>
      <style type="text/css">
			table{border-left:1px solid #d8d8d8;border-bottom:1px solid #d8d8d8;text-align:right;}
			td{border-right:1px solid #d8d8d8;border-top:1px solid #d8d8d8;height:30px;}
			body{font-size:13px;}
    </style>
    <script src="@Url.Content("/Areas/Back/artDialog/jquery-1.3.2.min.js")" type="text/javascript"></script>
    <script language="javascript">
        function Validate() {
            var img = document.getElementById("fuImage").value;
            var postfix = img.substring(img.lastIndexOf('.'), img.length).toLowerCase();
            if ($("#Name").val().replace(/(^\s*)|(\s*$)/g, "") == "") {
                alert("页面不能有空值");
                return false;
            } else if ($("#fuImage").val() == "") {
                alert("请选择图片路径");
                return false;
            } else if (postfix != ".jpg" && postfix != ".jpeg" && postfix != ".gif" && postfix != ".bmp" && postfix != ".png") {
                alert("上传文件必须为jpg|jpeg|gif|bmp|png格式的图片");
                return false;
            }
            return true;
        }
    </script>
</head>
<body>
@using (Html.BeginForm("RollPictureUpdate", "Others", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        @Html.HiddenFor(g=>g.ID)
        <table style="width:100%;height:auto;" cellspacing="0" cellpadding="0">
			    <tr>
				    <td width="20%" style="padding-right:10px;">标题:</td>
				    <td width="auto" style="text-align:left;padding-left:10px;">@Html.TextBoxFor(g=>g.Title)</td>
			    </tr>
			    <tr>
				    <td width="20%" style="padding-right:10px;">上传图片:</td>
				    <td width="auto" style="text-align:left;padding-left:10px;">
                        <input type="file" id="fuImage" name="fuImage" />
                        <img src="/File/ScrollIamge/@Model.Path" width="200" height="100" />
                    </td>
			    </tr>
			    <tr>
				    <td width="20%">&nbsp;</td>
				    <td width="auto" style="text-align:left;padding-left:10px;">
				     <input type="submit" value="添 加" onclick="return Validate();" /> <input type="button" value="返 回" onclick="javascript:history.back();" />
				    </td>
			    </tr>
	    </table>
    }
</body>
</html>

