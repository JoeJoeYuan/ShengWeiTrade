@model Models.Links
@{
    ViewBag.Title = "LinkADD";
    Layout = "/Areas/Back/Views/Shared/_ChildMaster.cshtml";
}
@using (Html.BeginForm("EDITLink", "Items"))
{
    @Html.HiddenFor(a=>a.ID)
    <table style="width: 300px; height: auto;" cellpadding="0" cellspacing="0">
        <tr>
            <td>
                名称:
            </td>
            <td>
               @Html.TextBoxFor(a => a.LName, new { emptyMessage="名称不能为空"})
            </td>
        </tr>
        <tr>
            <td>
                连接地址:
            </td>
            <td>
                @Html.TextBoxFor(a => a.LPath, new { emptyMessage = "连接地址不能为空" })
            </td>
        </tr>
        <tr>
            <td>
                <input type="submit" value="提交" />
            </td>
            <td>
                &nbsp;
            </td>
        </tr>
    </table>
}
