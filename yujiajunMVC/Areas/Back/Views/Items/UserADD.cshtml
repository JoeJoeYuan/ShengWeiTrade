@model yujiajunMVC.Areas.Back.Models.UserModel
@{
    ViewBag.Title = "UserADD";
    Layout = "/Areas/Back/Views/Shared/_ChildMaster.cshtml";
}
@using (Html.BeginForm("InsertUser", "Items"))
{
     
    <table style="width: 300px; height: auto;" cellpadding="0" cellspacing="0">
        <tr>
            <td>
                用户名:
            </td>
            <td>@Html.TextBoxFor(a => a.UserName, new { style = "width:150px", emptyMessage = "用户名不能为空" })
            </td>
        </tr>
        <tr>
            <td>
                密码:
            </td>
            <td>@Html.PasswordFor(a => a.UserPassword, new { style = "width:150px", emptyMessage = "密码不能为空" })
            </td>
        </tr>
        <tr>
            <td>
                是否管理员:
            </td>
            <td>@Html.EditorFor(a => a.IsAdmin)
            </td>
        </tr>
        <tr>
            <td>
                是否启用:
            </td>
            <td>@Html.EditorFor(a => a.IsLock)
            </td>
        </tr>
        <tr>
            <td>
                <input type="submit" value="提交" />
            </td>
            <td>
                &nbsp;
            </td>
        </tr>
    </table>
}
