@model int?
<select id="dataType" name="@ViewData.TemplateInfo.GetFullHtmlFieldName(string.Empty)">
</select>
<script src="@Url.Content("/JavaScript/jquery-1.3.2.min.js")" type="text/javascript"></script>
@if (Model != null)
{ 
    <script language="javascript">
        $(document).ready(function(){
            $.post("@Url.Action("LoadDropDownList", "Items")",{},function(data){
               if(data!="")
                {
                  $("#dataType").empty();
                  $(eval(data)).each(function(){
                      var option = new Option();
                      option.text=this.FName;
                      option.value = this.ID;
                      document.getElementById("dataType").options.add(option);
                    });
                }
                $("#dataType").val(@Model);
            });
        });
    </script>
}
else
{ 
    <script language="javascript">
        $(function(){
            $.post("@Url.Action("LoadDropDownList", "Items")",{},function(data){
               if(data!="")
                {
                  $("#dataType").empty();
                  $(eval(data)).each(function(){
                      var option = new Option();
                      option.text=this.FName;
                      option.value = this.ID;
                      document.getElementById("dataType").options.add(option);
                    });
                }
            });
        });
    </script>
}
