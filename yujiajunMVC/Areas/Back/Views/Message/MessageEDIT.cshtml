@model Models.Messages
@{
    ViewBag.Title = "MessageEDIT";
    Layout = null;
}
<html xmlns="http://www.w3.org/1999/xhtml" >
<head runat="server">
    <title>Untitled Page</title>
    <style type="text/css">
			table{border-left:1px solid #d8d8d8;border-bottom:1px solid #d8d8d8;text-align:right;}
			td{border-right:1px solid #d8d8d8;border-top:1px solid #d8d8d8;height:25px;}
			.background{background-color:#dfe7f2}
			body{font-size:13px;font-family:"微软雅黑";font-weight:bold;}
    </style>
</head>
<body>
    @using (Html.BeginForm("MessageUpdate","Message"))
    {
    <table style="width:100%;height:auto;" cellspacing="0" cellpadding="0">
        @Html.HiddenFor(a=>a.ID)
			<tr>
				<td width="30%" style="padding-right:10px;">IP:</td>
				<td width="auto" style="text-align:left;padding-left:10px;">@Model.IP</td>
			</tr>
			<tr class="background">
				<td width="30%" style="padding-right:10px;">留言时间:</td>
				<td width="auto" style="text-align:left;padding-left:10px;">@Model.CreateTime.Value.ToString("yyyy-MM-dd hh:mm:ss")</td>
			</tr>
			<tr>
				<td width="30%" style="padding-right:10px;">是否通过审核:</td>
				<td width="auto" style="text-align:left;padding-left:10px;">
				    @(Model.IsAudit.Value==0?"否":"是")
				</td>
			</tr>
			<tr class="background">
				<td width="30%" style="padding-right:10px;">姓名:</td>
				<td width="auto" style="text-align:left;padding-left:10px;">@Model.CreateName</td>
			</tr>
			<tr>
				<td width="30%">内容:</td>
				<td width="auto" style="text-align:left;padding-left:10px;">
                    @Html.TextAreaFor(a => a.MessageContent, new { @rows = "10", @cols = "80" })
				</td>
			</tr>
			<tr>
				<td width="30%">&nbsp;</td>
				<td width="auto" style="text-align:left;padding-left:10px;"><input type="submit" value="@ViewBag.value"  @ViewBag.disabled />&nbsp;&nbsp;<input type="button" value="返 回" onclick="javascript:history.back();" /></td>
			</tr>
	</table>
    }
</body>
</html>


